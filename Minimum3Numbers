#include <iostream>
using namespace std;
int main()
{
	double A, B, C;
	cout << " Enter the first number ";
	cin >> A;
	cout << " Enter the second number ";
	cin >> B;
	cout << " Enter the third number ";
	cin >> C;
	double min = A < B ? A : B;
	if (min > C) min = C;
	cout << "min:" <<min <<endl;
	system ("pause");
	return 0;
}
