#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	long int n, a, b;
	int t = 1, d = 0;
	int k = 1, s = 0, f;
	int l = 1, rev = 0, p;

	cout << " Ð¡hange in the number!" << "\n";
	cout << "Input number n=";
	cin >> n;
	cout << "Replace digit number a=";
	cin >> a;
	cout << "to figure b=";
	cin >> b;

	for (;;)
	{
		if (n / t)
			d = d + 1;
		else break;
		t = t * 10;
	}
	cout << "number of digits =" << d << "\n";

	for (int i = 1; i <= d; ++i)
	{
		f = ((n / k) % 10);
		k = k * 10;
		if (f == a)
		{
			f = b;
		}
		s = s * 10 + f;
	}

	for (int j = 1; j <= d; ++j)
	{
		p = (s / l) % 10;
		rev = rev * 10 + p;
		l = l * 10;
	}

	cout << " The resulting number " << rev << "\n";
	_getch();
	return 0;
}

